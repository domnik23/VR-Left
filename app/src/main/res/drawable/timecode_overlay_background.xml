<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Semi-transparent pink background for better visibility -->
    <solid android:color="#40FF69B4" />

    <!-- Pink outline (thicker for better visibility) -->
    <stroke
        android:width="3dp"
        android:color="#FF69B4" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="6dp"
        android:right="8dp"
        android:bottom="6dp" />

</shape>
