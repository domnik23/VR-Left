<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <android.opengl.GLSurfaceView
        android:id="@+id/glSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Info Box with Steps at Top -->
    <LinearLayout
        android:id="@+id/infoBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#80000000"
        android:visibility="gone">

        <TextView
            android:id="@+id/infoBoxText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step 1/3: Select video folder in Settings"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="4dp" />

    </LinearLayout>

   <LinearLayout
    android:id="@+id/overlayContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top|center_horizontal"
    android:layout_marginTop="60dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="12dp"
    android:background="#60000000">

    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.0"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/stepCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps: 0"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/speedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.3x"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/distanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0km"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/caloriesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0kcal"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⋮"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp" />

</LinearLayout>

    <TextView
        android:id="@+id/timecodeOverlayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="12dp"
        android:background="#40000000"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textAlignment="center"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/finishOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:background="#CC000000"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏁"
            android:textSize="72sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ziel erreicht!"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/finishText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zeit: 00:00\nSchritte: 0\nDistanz: 0.0km\nKalorien: 0kcal"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="start"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/finishRestartButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neustarten"
                android:layout_marginEnd="16dp"
                android:minWidth="120dp" />

            <Button
                android:id="@+id/finishExitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beenden"
                android:minWidth="120dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Video Selection List Overlay -->
    <include layout="@layout/video_list_overlay" />

</FrameLayout>