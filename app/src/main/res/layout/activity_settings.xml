<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

<ScrollView
    android:id="@+id/settingsScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Einstellungen"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="4dp" />

        <!-- Video Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_card_background"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¥ Video"
                android:textColor="#BB86FC"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/selectVideoFolderButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Video-Ordner wÃ¤hlen"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2979FF"
                android:layout_marginBottom="6dp"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/currentFolderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kein Ordner ausgewÃ¤hlt"
                android:textColor="#888888"
                android:textSize="11sp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp" />

            <Button
                android:id="@+id/selectVideoButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Einzelnes Video wÃ¤hlen"
                android:textColor="#AAAAAA"
                android:background="@drawable/outlined_button"
                android:layout_marginBottom="6dp"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/currentVideoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aktuell: Kein Video"
                android:textColor="#888888"
                android:textSize="11sp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video Rotation"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/videoRotationSpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#2A2A2A"
                android:padding="8dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video LautstÃ¤rke"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <SeekBar
                    android:id="@+id/volumeSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="50" />

                <TextView
                    android:id="@+id/volumeValueText"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>
        </LinearLayout>

        <!-- Display Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_card_background"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ‘ï¸ Anzeige"
                android:textColor="#03DAC6"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Stereo Modus (3D)"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/stereoSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Augenabstand (IPD)"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <SeekBar
                    android:id="@+id/ipdSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="30"
                    android:progress="14" />

                <TextView
                    android:id="@+id/ipdValueText"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="64mm"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sichtfeld (FOV)"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <SeekBar
                    android:id="@+id/fovSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="40"
                    android:progress="15" />

                <TextView
                    android:id="@+id/fovValueText"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="75Â°"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>
        </LinearLayout>

        <!-- Speed Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_card_background"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âš¡ Geschwindigkeit"
                android:textColor="#FFC107"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Min (keine Bewegung)"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <SeekBar
                    android:id="@+id/minSpeedSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="40" />

                <TextView
                    android:id="@+id/minSpeedValueText"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="0.4x"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Min (beim Gehen)"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <SeekBar
                    android:id="@+id/minSpeedMovingSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="70" />

                <TextView
                    android:id="@+id/minSpeedMovingValueText"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="0.7x"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Max (schnelles Joggen)"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <SeekBar
                    android:id="@+id/maxSpeedSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="50" />

                <TextView
                    android:id="@+id/maxSpeedValueText"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="1.5x"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beschleunigung"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <SeekBar
                    android:id="@+id/smoothingSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="30" />

                <TextView
                    android:id="@+id/smoothingValueText"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="Normal"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="StabilitÃ¤t um 1.0x"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <SeekBar
                    android:id="@+id/accelerationCurveSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="200"
                    android:progress="0" />

                <TextView
                    android:id="@+id/accelerationCurveValueText"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Linear"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video Start verzÃ¶gern"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <SeekBar
                    android:id="@+id/stepsBeforeStartSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="10"
                    android:progress="3" />

                <TextView
                    android:id="@+id/stepsBeforeStartValueText"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="3 Schritte"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>
        </LinearLayout>

        <!-- Fitness Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_card_background"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸƒ Fitness Tracking"
                android:textColor="#CF6679"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SchrittlÃ¤nge"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <SeekBar
                    android:id="@+id/strideLengthSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="50"
                    android:progress="25" />

                <TextView
                    android:id="@+id/strideLengthValueText"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="0.75m"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kalorien pro km"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <SeekBar
                    android:id="@+id/caloriesSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="60" />

                <TextView
                    android:id="@+id/caloriesValueText"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="60 kcal"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>
        </LinearLayout>

        <!-- Info Section -->
        <TextView
            android:id="@+id/appVersionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version 1.0"
            android:textColor="#555555"
            android:textSize="11sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/resetButton"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="ZurÃ¼cksetzen"
                android:textColor="#CF6679"
                android:background="@drawable/outlined_button"
                android:layout_marginEnd="6dp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Speichern"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                android:layout_marginStart="6dp"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

<!-- Video List Overlay (same as MainActivity) -->
<LinearLayout
    android:id="@+id/videoListContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C0000000"
    android:gravity="center"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    android:visibility="gone">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Videos aus deinem Ordner"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/videoRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#30FFFFFF"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/selectOtherVideoButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Andere Datei wÃ¤hlen"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/cancelVideoListButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Abbrechen"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>

</FrameLayout>
