<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Einstellungen"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="4dp" />

        <!-- Video Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¥ Video"
                    android:textColor="#BB86FC"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/selectVideoFolderButton"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Video-Ordner wÃ¤hlen"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#2979FF"
                    android:layout_marginBottom="6dp"
                    android:textAllCaps="false" />

                <TextView
                    android:id="@+id/currentFolderText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kein Ordner ausgewÃ¤hlt"
                    android:textColor="#888888"
                    android:textSize="11sp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="4dp" />

                <Button
                    android:id="@+id/selectVideoButton"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Einzelnes Video wÃ¤hlen"
                    android:textColor="#AAAAAA"
                    android:layout_marginBottom="6dp"
                    android:textAllCaps="false" />

                <TextView
                    android:id="@+id/currentVideoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aktuell: Kein Video"
                    android:textColor="#888888"
                    android:textSize="11sp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Video Rotation"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/videoRotationSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#2A2A2A"
                    android:padding="8dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Video LautstÃ¤rke"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <SeekBar
                        android:id="@+id/volumeSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="#BB86FC"
                        android:thumbTint="#BB86FC" />

                    <TextView
                        android:id="@+id/volumeValueText"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textAlignment="textEnd" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Display Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘ï¸ Anzeige"
                    android:textColor="#03DAC6"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Stereo Modus (3D)"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/stereoSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="#03DAC6"
                        app:trackTint="#444444" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Augenabstand (IPD)"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <SeekBar
                        android:id="@+id/ipdSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="30"
                        android:progress="14"
                        android:progressTint="#03DAC6"
                        android:thumbTint="#03DAC6" />

                    <TextView
                        android:id="@+id/ipdValueText"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="64mm"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textAlignment="textEnd" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Fitness Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸƒ Fitness Tracking"
                    android:textColor="#CF6679"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SchrittlÃ¤nge"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <SeekBar
                        android:id="@+id/strideLengthSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="50"
                        android:progress="25"
                        android:progressTint="#CF6679"
                        android:thumbTint="#CF6679" />

                    <TextView
                        android:id="@+id/strideLengthValueText"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="0.75m"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textAlignment="textEnd" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kalorien pro km"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <SeekBar
                        android:id="@+id/caloriesSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="60"
                        android:progressTint="#CF6679"
                        android:thumbTint="#CF6679" />

                    <TextView
                        android:id="@+id/caloriesValueText"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="60 kcal"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textAlignment="textEnd" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Speed Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš¡ Geschwindigkeit"
                    android:textColor="#FFC107"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Min (keine Bewegung)"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <SeekBar
                        android:id="@+id/minSpeedSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="40"
                        android:progressTint="#FFC107"
                        android:thumbTint="#FFC107" />

                    <TextView
                        android:id="@+id/minSpeedValueText"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="0.4x"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textAlignment="textEnd" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Min (beim Gehen)"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <SeekBar
                        android:id="@+id/minSpeedMovingSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="70"
                        android:progressTint="#FFC107"
                        android:thumbTint="#FFC107" />

                    <TextView
                        android:id="@+id/minSpeedMovingValueText"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="0.7x"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textAlignment="textEnd" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Max (schnelles Joggen)"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <SeekBar
                        android:id="@+id/maxSpeedSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="#FFC107"
                        android:thumbTint="#FFC107" />

                    <TextView
                        android:id="@+id/maxSpeedValueText"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="1.5x"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textAlignment="textEnd" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Info Section -->
        <TextView
            android:id="@+id/appVersionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version 1.0"
            android:textColor="#555555"
            android:textSize="11sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/resetButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="ZurÃ¼cksetzen"
                android:textColor="#CF6679"
                android:layout_marginEnd="6dp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/saveButton"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Speichern &amp; SchlieÃŸen"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                android:layout_marginStart="6dp"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
